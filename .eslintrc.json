{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "amd": true,
    "node": true
  },
  "globals": {
    "app": true,
    "io": true,
    "angular": true
  },
  "plugins": [
    "standard",
    "promise",
    "angular"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}